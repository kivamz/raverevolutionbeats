---
import Header from './Header.astro';
import Footer from './Footer.astro';
import CartSidebar from './CartSidebar.astro';
import '../styles/global.scss';
import '../styles/product-detail.scss';
import faviconSvg from '../assets/favicon.svg';
import { getAssetUrl } from '../utils/base-url';

// SEO props with defaults
const {
  title = "Rave Revolution Beats - Electronic Music Experience",
  description = "Experience the future of electronic music with Rave Revolution Beats. Discover exclusive tracks, immersive events, and join our global community of music enthusiasts.",
  keywords = "electronic music, rave, beats, techno, house, trance, DJ, music production, electronic dance music, EDM",
  canonicalURL = "https://yourdomain.com/",
  ogImage = "https://yourdomain.com/og-image.jpg",
  twitterCard = "summary_large_image"
} = Astro.props;

// Get asset URLs with correct base path
const manifestUrl = getAssetUrl('manifest.json');
const cartManagerUrl = getAssetUrl('cart-manager.js');
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content={twitterCard} />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
      <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={faviconSvg.src} />
      <!-- PWA Manifest -->
    <link rel="manifest" href={manifestUrl} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Rave Revolution Beats" />    <meta name="theme-color" content="#a855f7" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="RRB" />
    
    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://open.spotify.com" />
    <link rel="preconnect" href="https://kit.fontawesome.com" />    <link rel="dns-prefetch" href="https://music.apple.com" />
    <link rel="dns-prefetch" href="https://youtube.com" />
      <!-- CDN de Font Awesome -->
    <script src="https://kit.fontawesome.com/5e60daf075.js" crossorigin="anonymous"></script>    <!-- Cart Manager Script -->
    <script src={cartManagerUrl} defer></script>
  </head>
  <body>
    <Header />
    <main>
      <slot></slot>
    </main>
    <Footer />
    <CartSidebar />
  </body>
</html>
