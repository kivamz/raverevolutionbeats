---
import Header from './Header.astro';
import Footer from './Footer.astro';
import CartSidebar from './CartSidebar.astro';
import '../styles/global.scss';

const baseUrl = import.meta.env.BASE_URL || '/';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <base href={baseUrl} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <title>Rave Revolution Beats</title>
    <!-- CDN de Font Awesome -->
    <script src="https://kit.fontawesome.com/5e60daf075.js" crossorigin="anonymous"></script>
    <!-- Cart Management Script -->
    <script src={`${baseUrl}cart-manager.js`} is:inline></script>
  </head>
  <body>
    <Header />
    <main>
      <slot></slot>
    </main>
    <Footer />
    <CartSidebar />
  </body>
</html>
