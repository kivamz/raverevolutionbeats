---
import Layout from '../components/Layout.astro';
import "../styles/contact.scss";
---
<Layout>
  <section class="contact">
    <div class="container">
      <div class="contact-header">
        <h1>Connect With Us</h1>
        <p>Join our community and stay connected through our social networks. Follow us for the latest tracks, exclusive content, and behind-the-scenes moments.</p>
      </div>
      
      <div class="social-section">
        <h2 class="social-title">Find Us On</h2>
        <div class="social-links">
          <a href="https://www.youtube.com/@RaveRevolutionBeats" target="_blank" rel="noopener" class="social-link youtube">
            <i class="fa-brands fa-youtube"></i>
            <div class="social-info">
              <div class="platform-name">YouTube</div>
              <div class="platform-handle">@RaveRevolutionBeats</div>
            </div>
          </a>
          
          <a href="https://www.instagram.com/raverevolutionbeats" target="_blank" rel="noopener" class="social-link instagram">
            <i class="fa-brands fa-instagram"></i>
            <div class="social-info">
              <div class="platform-name">Instagram</div>
              <div class="platform-handle">@raverevolutionbeats</div>
            </div>
          </a>
          
          <a href="https://www.tiktok.com/@raverevolutionbeats" target="_blank" rel="noopener" class="social-link tiktok">
            <i class="fa-brands fa-tiktok"></i>
            <div class="social-info">
              <div class="platform-name">TikTok</div>
              <div class="platform-handle">@raverevolutionbeats</div>
            </div>
          </a>
          
          <a href="https://linktr.ee/raverevolutionbeats" target="_blank" rel="noopener" class="social-link linktree">
            <i class="fa-solid fa-link"></i>
            <div class="social-info">
              <div class="platform-name">Linktree</div>
              <div class="platform-handle">All Links</div>
            </div>
          </a>
          
          <a href="https://www.threads.com/@raverevolutionbeats" target="_blank" rel="noopener" class="social-link threads">
            <i class="fa-brands fa-threads"></i>
            <div class="social-info">
              <div class="platform-name">Threads</div>
              <div class="platform-handle">@raverevolutionbeats</div>
            </div>
          </a>
          
          <a href="https://x.com/RaveRevolutionB" target="_blank" rel="noopener" class="social-link twitter">
            <i class="fa-brands fa-x-twitter"></i>
            <div class="social-info">
              <div class="platform-name">X (Twitter)</div>
              <div class="platform-handle">@RaveRevolutionB</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
