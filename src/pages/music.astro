---
import Layout from '../components/Layout.astro';
import "../styles/music.scss";
---
<Layout>
  <section class="music">
    <div class="container">
      <h1>Our Music</h1>
      <p>Explore our exclusive collection of music tracks, albums, and playlists curated for your listening pleasure.</p>
      <div class="album-grid">
        <article class="album-item">
          <img src="https://placehold.co/300x300/121212/ffffff?text=Album+1" alt="Album 1" />
          <h2>Album 1</h2>
        </article>
        <article class="album-item">
          <img src="https://placehold.co/300x300/121212/ffffff?text=Album+2" alt="Album 2" />
          <h2>Album 2</h2>
        </article>
        <article class="album-item">
          <img src="https://placehold.co/300x300/121212/ffffff?text=Album+3" alt="Album 3" />
          <h2>Album 3</h2>
        </article>
      </div>
    </div>
  </section>
</Layout>
