---
import Layout from '../components/Layout.astro';
import "../styles/store.scss";
---
<Layout>
  <section class="store">
    <div class="container">
      <h1>Our Store</h1>
      <p>Discover our exclusive products and special offers curated just for you.</p>
      <div class="product-grid">
        <article class="product-item">
          <img src="https://placehold.co/300x200/121212/ffffff?text=Product+1" alt="Product 1" />
          <h2>Product 1</h2>
          <p class="price">$19.99</p>
          <a href="#" class="btn">Buy Now</a>
        </article>
        <article class="product-item">
          <img src="https://placehold.co/300x200/121212/ffffff?text=Product+2" alt="Product 2" />
          <h2>Product 2</h2>
          <p class="price">$29.99</p>
          <a href="#" class="btn">Buy Now</a>
        </article>
        <article class="product-item">
          <img src="https://placehold.co/300x200/121212/ffffff?text=Product+3" alt="Product 3" />
          <h2>Product 3</h2>
          <p class="price">$39.99</p>
          <a href="#" class="btn">Buy Now</a>
        </article>
      </div>
    </div>
  </section>
</Layout>
